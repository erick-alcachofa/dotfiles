@import "colors.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"Ubuntu Nerd Font 11";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					2px;
    border-radius:          8px;
    border-color:           @blue;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@foreground-alt;
}
